<h1> 図書情報の編集 </h1><br>

<div class="navbar navbar-default">
  <div class="navbar-inner">
    <ul class="nav">
      <li><%= link_to "図書検索画面", admins_top_index_path %></li>
      <li><%= link_to "図書追加", new_admins_book_path %></li>
      <li><%= link_to "図書リクエスト", admins_new_books_path %></li>
      <li><%= link_to "ブックマーク", admins_bookmarks_path %></li>
      <li><%= link_to "貸出履歴", admins_borrowing_histories_path %></li>
      <li><%= link_to "貸出/予約状況", admins_borrowings_path %></li>
      <li><%= link_to "詳細画面", :back %></li>
    </ul>
  </div>
</div>

<div class="editer_container">
  <%= form_for @book, url: admins_book_path do |f| %>

    <p>
    <%= f.label :タイトル %>
    <%= f.text_field :title %>
    </p>

    <p>
    <%= f.label :著者 %>
    <%= f.collection_select :author_id, Author.all, :id, :author_name %><br>
    </p>

    <p>
    <%= f.label :出版社 %>
    <%= f.collection_select :publisher_id, Publisher.all, :id, :publisher_name %>
    </p>

    <p>
    <%= f.label :分野 %>
    <%= f.collection_select :genre_id, Genre.all, :id, :genre_name %>
    </p><br>

    <div class="editer_button">
      <%= f.submit :図書情報の更新 %>
    </div>

  <% end %>
