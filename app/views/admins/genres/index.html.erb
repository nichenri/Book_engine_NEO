<h1> 管理者画面 </h1><br>


<div class="navbar navbar-default">
  <div class= "navbar-inner">
    <ul class="nav">
      <li><%= link_to "図書検索画面", admins_top_index_path %></li>
      <li><%= link_to "図書追加", new_admins_book_path %></li>
      <li><%= link_to "図書リクエスト", admins_new_books_path %></li>
      <li><%= link_to "ブックマーク", admins_bookmarks_path %></li>
      <li><%= link_to "貸出履歴", admins_borrowing_histories_path %></li>
      <li><%= link_to "貸出/予約状況", admins_borrowings_path %></li>
    </ul>
  </div>
</div><br>

<div class="nature_create">
  <%= form_for @genre, url:admins_genres_path do |f| %>

    <%= f.label :分野名 %>
    <%= f.text_field :genre_name %>
    <%= f.submit :分野の追加 %>

  <% end %>
</div><br><br>

<div class="nature_container">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>分野名</th>
        <th>更新日時</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.genre_name %> </td>
          <td><%= genre.updated_at %></td>
          <td>
            <%= button_to "編集", edit_admins_genre_path(genre.id), :method => :get %>
          </td>
          <td>
            <%= button_to "削除", admins_genre_path(genre.id), method: :delete, data: {confirm: "本当に削除しますか？"}, :method => :delete %>
          </td>
        </tr>
    </tbody>
  <% end %>
  </table>
</div>
