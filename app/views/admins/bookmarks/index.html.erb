<h1>ブックマーク</h1><br>

<div class="navbar navbar-default">
  <div class="navbar-inner">
    <ul class="nav">
      <li><%= link_to "図書検索画面", admins_top_index_path %></li>
      <li><%= link_to "図書追加", new_admins_book_path %></li>
      <li><%= link_to "図書リクエスト", admins_new_books_path %></li>
      <li class="now"><%= link_to "ブックマーク"%></li>
      <li><%= link_to "貸借り履歴", admins_borrowing_histories_path %></li>
      <li><%= link_to "貸借り/予約状況", admins_borrowings_path %></li>
    </ul>
  </div>
</div>

<h2>ブックマークの検索</h2><br>
<div class="search_field">
  <%= search_form_for @bookmark_search, url: admins_bookmarks_path do |f| %>
    <div class="field">
      <%= f.label :user_name_cont, "ユーザ名" %>
      <%= f.text_field :user_name_cont %><br>
      <%= f.label :book_title_cont, "図書名" %>
      <%= f.text_field :book_title_cont %><br>
    </div><br>
    <div class="search_actions"><%= f.submit "Search" %></div>
  <% end %>
</div><br>


<div class="container">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ユーザ</th>
        <th>タイトル</th>
        <th>著者</th>
        <th>出版社</th>
        <th>分野</th>
      </tr>
    </thead>
    <tbody>
      <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= bookmark.user.name %></td>
        <td><%= bookmark.book.title %></td>
        <td><%= bookmark.book.author.author_name %></td>
        <td><%= bookmark.book.publisher.publisher_name %></td>
        <td><%= bookmark.book.genre.genre_name %></td>
      </tr>
    </tbody>
  <% end %>
</table>
