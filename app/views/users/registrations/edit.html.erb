<div class="login">
  <h2>ユーザ情報の編集</h2><br><br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="login_field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true %>
  </div><br>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="login_field">
    <%= f.label :名前 %>
    <%= f.text_field :name, autofocus: true %>
  </div><br>

  <div class="login_field">
    <%= f.label :現在のパスワード %>
    <%= f.password_field :current_password, autocomplete: "off", :placeholder=>"認証用" %>
  </div><br>

  <div class="login_field">
    <%= f.label :パスワード変更 %>
    <%= f.password_field :password, autocomplete: "off", :placeholder=>"変更なければ入力不要"%>
  </div><br>

  <div class="login_field">
    <%= f.label :パスワード再入力 %>
    <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder=>"変更なければ入力不要" %>
  </div><br>

  <div class="update_actions">
    <%= f.submit "ユーザ情報の更新" %>
  </div>
<% end %><br>

<div class="update_actions">
  <%= button_to "アカウントの削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
</div><br>

<%= link_to "図書検索画面", :back %>
</div>
